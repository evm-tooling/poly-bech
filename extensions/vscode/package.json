{
  "name": "polybench-lsp",
  "displayName": "Poly Bench",
  "description": "Language support for .bench files with embedded Go, TypeScript, and Rust - powered by poly-bench LSP",
  "version": "0.1.12",
  "publisher": "evm-tooling",
  "repository": {
    "type": "git",
    "url": "https://github.com/evm-tooling/poly-bench"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "icon.png",
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/src/extension.js",
  "activationEvents": [
    "onLanguage:polybench"
  ],
  "contributes": {
    "configurationDefaults": {
      "[polybench]": {
        "editor.wordBasedSuggestions": "off",
        "editor.suggest.showWords": false,
        "editor.suggestOnTriggerCharacters": true,
        "editor.quickSuggestions": {
          "other": "on",
          "comments": "off",
          "strings": "on"
        }
      }
    },
    "configuration": {
      "title": "Poly Bench",
      "properties": {
        "poly-bench.lspPath": {
          "type": "string",
          "default": "",
          "description": "Path to the poly-bench binary. If empty, uses bundled binary or searches PATH for poly-bench."
        },
        "poly-bench.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "poly-bench.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Format .bench files when you save (uses Poly-Bench LSP)."
        },
        "poly-bench.useTreeSitterHighlighting": {
          "type": "boolean",
          "default": false,
          "description": "Use Tree-sitter WASM for client-side syntax highlighting (experimental). Provides faster initial highlighting."
        }
      }
    },
    "languages": [
      {
        "id": "polybench",
        "aliases": [
          "poly-bench",
          "bench"
        ],
        "extensions": [
          ".bench"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "polybench",
        "scopeName": "source.bench",
        "path": "./syntaxes/polybench.tmLanguage.json",
        "embeddedLanguages": {
          "source.go.embedded.bench": "go",
          "source.ts.embedded.bench": "typescript",
          "source.rust.embedded.bench": "rust"
        }
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "lint": "eslint src --ext ts",
    "version:update": "npx ts-node ./scripts/update-version.ts",
    "publish:dev": "npx ts-node ./scripts/publish-dev.ts",
    "publish:ci": "npx ts-node ./scripts/publish-ci.ts"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "web-tree-sitter": "^0.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.3.0"
  }
}
