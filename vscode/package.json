{
  "name": "poly-bench",
  "displayName": "poly-bench",
  "description": "Language support for .bench files with embedded Go and TypeScript - powered by poly-bench-lsp",
  "version": "0.5.3",
  "publisher": "evm-tooling",
  "repository": {
    "type": "git",
    "url": "https://github.com/evm-tooling/poly-bench"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:polybench"
  ],
  "contributes": {
    "configuration": {
      "title": "Poly Bench",
      "properties": {
        "poly-bench.lspPath": {
          "type": "string",
          "default": "",
          "description": "Path to poly-bench-lsp binary. If empty, uses bundled binary or searches PATH."
        },
        "poly-bench.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "poly-bench.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Format .bench files when you save."
        }
      }
    },
    "languages": [
      {
        "id": "polybench",
        "aliases": [
          "poly-bench",
          "bench"
        ],
        "extensions": [
          ".bench"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "polybench",
        "scopeName": "source.bench",
        "path": "./syntaxes/polybench.tmLanguage.json",
        "embeddedLanguages": {
          "source.go.embedded.bench": "go",
          "source.ts.embedded.bench": "typescript"
        }
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.3.0"
  }
}