{
  // Use the Poly-Bench extension (LSP) as the formatter for .bench files
  // Language id is "polybench" (see extensions/vscode/package.json)
  // Biome is in docs/; ensure docs has deps installed (bun install in docs/)
  "biome.lsp.bin": "${workspaceFolder}/docs/node_modules/.bin/biome",
  "biome.configurationPath": "${workspaceFolder}/docs/biome.json",
  "poly-bench.lspPath": "/Users/evanmcgrane/Documents/evm-tooling/poly-bench/target/debug/poly-bench",
  "editor.defaultFormatter": "biomejs.biome",
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "source.fixAll.biome": "explicit"
  },
  "editor.formatOnSave": true,
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[polybench]": {
  "editor.defaultFormatter": "evm-tooling.poly-bench",
  "editor.formatOnSave": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  }
}
}
